<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_srpl_root"
    tools:context=".InputPingLunActivity" 
    android:background="#f7f7f7">
    <!-- 头部信息 -->
    <include
       android:id="@+id/include_back_title_send"
       android:layout_width="fill_parent"
       android:layout_height="90px"
       layout="@layout/layout_back_title_send_top"/>
    
    <EditText
        android:id="@+id/edt_inputpinglun"
        android:layout_below="@id/include_back_title_send"
        android:layout_width="wrap_content"
        android:layout_height="360px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:gravity="left"
        android:hint="回复..."
        android:background="@drawable/bg_pinglun"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_commonn_back_text_title_root"
    android:layout_width="match_parent"
    android:layout_height="90px"
    android:background="@color/common_home_title_bg"
    android:orientation="horizontal"
    android:splitMotionEvents="false"
    tools:ignore="PxUsage,HardcodedText" >

    <!-- 头部 返回箭头 ，标题内容 ，分享按钮，其他 -->

    <RelativeLayout
        android:id="@+id/rl_commonn_back_text_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_home_title_bg"
        android:gravity="center_vertical"
        android:splitMotionEvents="false" >

        <!-- 标题栏 返回按钮 -->

        <LinearLayout
            android:id="@+id/ll_commonn_text_title_back"
            android:layout_width="120px"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_commonn_back_text_back"
                android:layout_width="30px"
                android:layout_height="35px"
                android:layout_gravity="center"
                android:layout_marginLeft="30px"
                android:background="@drawable/top_back_btn"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <!-- 标题文字 -->

        <TextView
            android:id="@+id/tv_commonn_back_title_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="信息详情"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/ll_commonn_title_menu_text_more"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="40px"
            android:paddingRight="30px" >

            <TextView
                android:id="@+id/tv_commonn_back_title_more_extend"
                android:layout_width="60px"
                android:layout_height="55px"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_commonn_back_title_more_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="保存"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
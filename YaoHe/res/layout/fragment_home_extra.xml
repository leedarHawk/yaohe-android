<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_home_other_fragment_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="HardcodedText,PxUsage" >

    <TextView
        android:id="@+id/tv_fragment_extra_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120px"
        android:gravity="center"
        android:text="空空如也"
        android:textColor="@color/common_home_text_color_title"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_fragment_extra_text_link"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70px"
        android:gravity="center"
        android:text="去附近商家看看吧"
        android:textColor="@color/common_home_text_color_title"
        android:textSize="14sp" />

</LinearLayout>
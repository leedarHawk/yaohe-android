<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fyh_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".BusinessFaYaoHeActivity"
    tools:ignore="HardcodedText,ContentDescription,PxUsage,RtlHardcoded">

    <!-- 头部信息 -->

    <include
        android:id="@+id/include_fyh_back_title_send"
        android:layout_width="fill_parent"
        android:layout_height="90px"
        android:layout_alignParentTop="true"
        layout="@layout/layout_back_title_send_top" />

    <com.collcloud.frame.xlistview.XListView
        android:id="@+id/listview"
        android:layout_below="@id/include_fyh_back_title_send"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f7f7f7"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:listSelector="#00000000"/>
</RelativeLayout>
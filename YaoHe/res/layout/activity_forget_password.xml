<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_fp_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,PxUsage" >

    <include
        android:id="@+id/in_top_back_titile"
        android:layout_width="fill_parent"
        android:layout_height="90px"
        layout="@layout/layout_backandtitle_top" />

    <RelativeLayout
        android:id="@+id/rl_phonenum_edt"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="40px"
        android:background="@drawable/editext_gray_stroke"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_fp_text_pn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="15px"
            android:paddingRight="10px"
            android:text="手  机  号"
            android:textColor="@color/common_home_text_color_title"
            android:textSize="14sp" >
        </TextView>

        <EditText
            android:id="@+id/edt_userphonenum_fp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnGetVerCode_fg_fp"
            android:layout_toRightOf="@+id/tv_fp_text_pn"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="10px"
            android:text=""
            android:textColor="@color/common_home_text_color_title"
            android:textColorHint="@color/common_home_text_color_fans_time"
            android:textSize="14sp" >
        </EditText>

        <Button
            android:id="@+id/btnGetVerCode_fg_fp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:background="@drawable/selctor_btn_red_invl"
            android:padding="10px"
            android:text="获取验证码"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:background="@drawable/editext_gray_stroke"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:paddingLeft="15px"
            android:paddingRight="10px"
            android:text="验  证  码"
            android:textColor="@color/common_home_text_color_title"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_InvCode_fp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="10px"
            android:text=""
            android:textColor="@color/common_home_text_color_title"
            android:textColorHint="@color/common_home_text_color_fans_time"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_FindPassWord_next"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="40px"
        android:background="@drawable/common_yaohe_red_btn_click"
        android:text="下一步"
        android:textColor="#ffffffff"
        android:textSize="17sp" />

</LinearLayout>
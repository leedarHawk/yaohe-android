<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_commonn_title_menu_root"
    android:layout_width="match_parent"
    android:layout_height="90px"
    android:background="@color/common_home_title_bg"
    android:orientation="horizontal"
    android:splitMotionEvents="false"
    tools:ignore="PxUsage,HardcodedText" >

    <!-- 头部 返回箭头 ，标题内容 ，分享按钮，其他 -->

    <RelativeLayout
        android:id="@+id/rl_commonn_title_menu_"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/common_home_title_bg"
        android:gravity="center_vertical"
        android:splitMotionEvents="false" >

        <!-- 标题栏 返回按钮 -->

        <LinearLayout
            android:id="@+id/ll_commonn_title_menu_back"
            android:layout_width="90px"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_commonn_title_menu_back"
                android:layout_width="30px"
                android:layout_height="35px"
                android:layout_gravity="center"
                android:background="@drawable/top_back_btn"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <!-- 标题文字 -->

        <TextView
            android:id="@+id/tv_commonn_title_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/ll_commonn_title_menu_share_more"
            android:layout_toRightOf="@+id/ll_commonn_title_menu_back"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="信息详情"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!-- 分享，更多按钮 -->

        <LinearLayout
            android:id="@+id/ll_commonn_title_menu_share_more"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_commonn_title_menu_share"
                android:layout_width="75px"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_commonn_title_menu_share"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:background="@drawable/icon_title_yaohe_share"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_commonn_title_menu_more"
                android:layout_width="70px"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_commonn_title_menu_more"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/icon_title_yaohe_jubao" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
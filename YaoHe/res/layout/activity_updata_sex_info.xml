<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_updata_sex_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/diliver_in_gray"
    android:orientation="vertical"
    android:splitMotionEvents="false"
    tools:ignore="HardcodedText,PxUsage" >

    <!-- 头部信息 -->

    <RelativeLayout
        android:id="@+id/rl_updata_sex_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <include layout="@layout/common_back_text_title" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_updata_sex_man"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px" >

            <TextView
                android:id="@+id/tv_updata_sex_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="10px"
                android:text="男"
                android:textColor="@color/common_home_text_color_title"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_updata_sex_man"
                android:layout_width="30px"
                android:layout_height="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@color/diliver_in_gray" />

        <RelativeLayout
            android:id="@+id/rl_updata_sex_women"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px" >

            <TextView
                android:id="@+id/tv_updata_sex_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="10px"
                android:text="女"
                android:textColor="@color/common_home_text_color_title"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_updata_sex_women"
                android:layout_width="30px"
                android:layout_height="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
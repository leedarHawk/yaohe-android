<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_mymsg_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessMyMsgActivity"
    tools:ignore="PxUsage,HardcodedText" >

    <include
        android:id="@+id/in_bus_msg"
        android:layout_width="fill_parent"
        android:layout_height="90px"
        layout="@layout/layout_backandtitle_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/in_bus_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80px"
        android:drawablePadding="30px"
        android:drawableTop="@drawable/icon_yaohe_no_data_default"
        android:gravity="center"
        android:text="您还没有消息"
        android:textColor="@color/common_home_text_color_title"
        android:textSize="15sp" />

    <com.collcloud.swipe.view.XListView
        android:id="@+id/xListView_bus_msg"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_below="@id/in_bus_msg"
        android:cacheColorHint="#00000000" >
    </com.collcloud.swipe.view.XListView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item_list_root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:ignore="PxUsage,HardcodedText" >

    <TextView
        android:id="@+id/tv_common_list_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:minHeight="80px"
        android:paddingLeft="30px"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="15sp" >
    </TextView>

    <TextView
        android:id="@+id/tv_common_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_common_list_item"
        android:layout_marginBottom="10px"
        android:gravity="center_vertical"
        android:minHeight="100px"
        android:paddingLeft="20px"
        android:textColor="#000000"
        android:textSize="12sp"
        android:visibility="gone" >
    </TextView>

    <!-- % % %  % % % % % % % % % % %  % % % -->

    <LinearLayout
        android:id="@+id/ll_common_item_title_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:minHeight="60px"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_common_item_title_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="搜索历史"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_common_item_title_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center"
            android:text="清空记录"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
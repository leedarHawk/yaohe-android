<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_mine_youhuiquan_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/diliver_in_gray"
    android:orientation="vertical"
    tools:ignore="PxUsage,HardcodedText" >

    <View
        android:id="@+id/view_mine_youhuiquan_blank"
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="@color/diliver_in_gray" />

    <RelativeLayout
        android:id="@+id/rl_mine_youhuiquan_r"
        android:layout_width="fill_parent"
        android:layout_height="175px"
        android:layout_below="@+id/view_mine_youhuiquan_blank"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/bg_youhuiquan" >

        <!-- 店铺图片 -->

        <ImageView
            android:id="@+id/im_usableyouhuiquan_shop_photo"
            android:layout_width="160px"
            android:layout_height="140px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:background="@drawable/icon_yaohe_loading_default"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />
        <!-- 店铺名  店铺类型 -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/im_usableyouhuiquan_shop_photo"
            android:orientation="vertical" >

            <!-- 店铺名 -->

            <TextView
                android:id="@+id/tv_usableyouhuiquan_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="15px"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/common_home_text_color_title"
                android:textSize="15sp" />
            <!-- 优惠信息 -->

            <TextView
                android:id="@+id/tv_usableyouhuiquan_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_usableyouhuiquan_shop_name"
                android:layout_marginLeft="20px"
                android:layout_marginRight="5px"
                android:layout_marginTop="10px"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/common_text_color_chengse"
                android:textSize="14sp" />
            <!-- 有效期   使用次数 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="20px"
                android:orientation="horizontal" >

                <!-- 有效期 -->

                <TextView
                    android:id="@+id/tv_usableyouhuiquan_totime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="有效期至 2015-12-31"
                    android:textColor="@color/common_home_text_color_fans_time"
                    android:textSize="13sp" />
                <!-- 使用次数 -->

                <TextView
                    android:id="@+id/tv_usableyouhuiquan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10px"
                    android:singleLine="true"
                    android:text="已使用0次"
                    android:textColor="@color/common_home_text_color_fans_time"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_mine_youhuiquan_blank2"
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:layout_below="@+id/rl_mine_youhuiquan_r"
        android:background="@color/diliver_in_gray" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_permsg_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    tools:context=".PersonMsgActivity"
    tools:ignore="HardcodedText,PxUsage" >

    <include
        android:id="@+id/in_top_per_msg"
        android:layout_width="fill_parent"
        android:layout_height="90px"
        layout="@layout/layout_backandtitle_top" />

    <RelativeLayout
        android:id="@+id/rl_person_msg_comment"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@+id/in_top_per_msg"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:clickable="true" >

        <TextView
            android:id="@+id/tv_person_msg_comment"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_person_msg_comment" />

        <TextView
            android:id="@+id/tv_business_msg_count"
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_alignEnd="@+id/tv_person_msg_comment"
            android:layout_alignRight="@+id/tv_person_msg_comment"
            android:layout_alignTop="@+id/tv_person_msg_comment"
            android:layout_marginRight="-10px"
            android:adjustViewBounds="true"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:padding="1dp"
            android:singleLine="true"
            android:text="0"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/tv_person_msg_comment"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_person_msg_comm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_business_xinpit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="评论"
                    android:textColor="@color/common_home_text_color_title"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_psg_comment_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/common_home_text_color_fans_time"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_psg_comment_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15px"
                android:gravity="left"
                android:singleLine="true"
                android:text="查看最新的评论信息"
                android:textColor="@color/common_home_text_color_fans_time"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/rl_person_msg_diliver"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/rl_person_msg_comment"
        android:background="@color/diliver_in_gray" />

    <RelativeLayout
        android:id="@+id/rl_person_msg_zan"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@+id/rl_person_msg_diliver"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:clickable="true" >

        <TextView
            android:id="@+id/tv_person_msg_zan"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_person_msg_zan" />

        <TextView
            android:id="@+id/tv_business_zan_count"
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_alignEnd="@+id/tv_person_msg_zan"
            android:layout_alignRight="@+id/tv_person_msg_zan"
            android:layout_alignTop="@+id/tv_person_msg_zan"
            android:layout_marginRight="-10px"
            android:adjustViewBounds="true"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:padding="1dp"
            android:singleLine="true"
            android:visibility="gone"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/tv_person_msg_zan"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_person_msg_zan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_business_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="赞"
                    android:textColor="@color/common_home_text_color_title"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_psg_zan_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/common_home_text_color_fans_time"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_psg_prise_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15px"
                android:gravity="left"
                android:singleLine="true"
                android:text="查看最新的点赞信息"
                android:textColor="@color/common_home_text_color_fans_time"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/rl_person_msg_zan"
        android:background="@color/diliver_in_gray" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item_fujin_shop_viewgroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false"
    tools:ignore="PxUsage,HardcodedText,ObsoleteLayoutParam,UnknownIdInLayout,RtlHardcoded,ContentDescription" >

    <!-- 选择按钮 和 图片 商店名称 和 类型 -->

    <RelativeLayout
        android:id="@+id/ll_item_fyh_service_"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/im_item_fyh_sel"
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:background="@drawable/icon_fujin_niming_off"
            android:contentDescription="@string/app_name"
            android:gravity="center" />

        <RelativeLayout
            android:id="@+id/rl_fyh_shop_name_type_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@+id/im_item_fyh_sel"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_fyh_yinyong_img"
                android:layout_width="160px"
                android:layout_height="match_parent"
                android:background="@drawable/ic_launcher"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@+id/iv_fyh_yinyong_img"
                android:gravity="center_vertical" >

                <!-- 商店名称 和 类型 -->

                <RelativeLayout
                    android:id="@+id/rl_item_fyh_shop_name_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_item_fyh_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10px"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/common_home_text_color_title"
                        android:textSize="14sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_item_fyh_type_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5px"
                    android:layout_toRightOf="@+id/rl_item_fyh_shop_name_type"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="@color/common_home_text_color_fans_time"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/ll_item_fyh_textinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_item_fyh_shop_name_type"
                    android:layout_marginTop="15px"
                    android:gravity="left|center" >

                    <TextView
                        android:id="@+id/tv_item_fyh_service_yhtext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="会员卡"
                        android:textColor="@color/common_home_text_color_fans_time"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/item_content_diviler_2"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_below="@+id/ll_item_fujin_image_content"
        android:background="@color/diliver_out_gray" />

</LinearLayout>
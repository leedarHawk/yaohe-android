<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_commonn_back_sub_title_root"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:background="@color/common_home_title_bg"
    android:orientation="horizontal"
    android:splitMotionEvents="false"
    tools:ignore="PxUsage,HardcodedText" >

    <!-- 头部 返回箭头 ，标题内容 ，靠右文字 -->

    <RelativeLayout
        android:id="@+id/rl_commonn_back_sub_title"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/common_home_title_bg"
        android:gravity="center_vertical"
        android:splitMotionEvents="false" >

        <!-- 标题栏 返回按钮 -->

        <LinearLayout
            android:id="@+id/ll_commonn_sub_title_back"
            android:layout_width="110px"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_commonn_sub_back"
                android:layout_width="30px"
                android:layout_height="35px"
                android:layout_gravity="center"
                android:background="@drawable/top_back_btn"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <!-- 标题文字 -->

        <TextView
            android:id="@+id/tv_commonn_back_sub_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="举报"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/ll_commonn_sub_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_commonn_sub_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="100px"
                android:singleLine="true"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_back_title_share_shoucang"
    android:layout_width="match_parent"
    android:layout_height="90px"
    android:background="@color/common_home_title_bg"
    android:orientation="horizontal"
    android:splitMotionEvents="false"
    tools:ignore="PxUsage,HardcodedText" >

    <!-- 返回箭头 ，标题内容 ，分享按钮，收藏 -->

    <RelativeLayout
        android:id="@+id/rl_back_title_share_shoucang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_home_title_bg"
        android:gravity="center_vertical"
        android:splitMotionEvents="false" >

        <!-- 标题栏 返回按钮 -->

        <LinearLayout
            android:id="@+id/ll_top_back"
            android:layout_width="110px"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_top_menu_back"
                android:layout_width="30px"
                android:layout_height="35px"
                android:layout_gravity="center"
                android:background="@drawable/top_back_btn"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <!-- 标题文字 -->

        <TextView
            android:id="@+id/tv_commonn_title_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="优惠券详情"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!-- 分享，到店使用 -->

        <LinearLayout
            android:id="@+id/ll_top_title_menu_share_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal" >

            <!-- 分享 -->

            <ImageView
                android:id="@+id/iv_top_title_menu_share"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginRight="20px"
                android:background="@drawable/icon_title_share_white_red"
                android:contentDescription="@string/app_name" />

            <!-- 消费 -->

            <ImageView
                android:id="@+id/iv_top_title_menu_shoucang"
                android:layout_width="70px"
                android:layout_height="65px"
                android:contentDescription="@string/app_name"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:src="@drawable/sale_red" >
            </ImageView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
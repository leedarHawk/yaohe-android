<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/common_dialog_styles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_backgound_stoke"
    android:orientation="vertical"
    tools:ignore="PxUsage,ButtonStyle,HardcodedText" >

    <LinearLayout
        android:layout_width="540px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@android:color/white"
        android:minHeight="220px"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/common_bw_dialog_btn_chengse"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_dialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text="@string/app_name"
            android:textColor="@color/common_home_text_color_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_dialogText_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="@string/app_name"
            android:textColor="@color/common_home_text_color_title"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_dialog_common_has_two_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:orientation="horizontal"
            android:splitMotionEvents="false" >

            <Button
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="260px"
                android:layout_height="90px"
                android:background="@drawable/common_blue_btn_click"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_dialog_ok"
                android:layout_width="260px"
                android:layout_height="90px"
                android:layout_marginLeft="20px"
                android:background="@drawable/common_bw_chengse_btn_click"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dialog_common_only_one_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:orientation="horizontal"
            android:splitMotionEvents="false" >

            <Button
                android:id="@+id/btn_dialog_only_one_ok"
                android:layout_width="540px"
                android:layout_height="90px"
                android:background="@drawable/common_bw_chengse_btn_click"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_yaohe_footer_common"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center_horizontal|bottom"
    android:orientation="vertical"
    android:splitMotionEvents="false"
    tools:ignore="HardcodedText,ContentDescription,PxUsage" >

    <LinearLayout
        android:id="@+id/ll_yaohe_footer_no_yaohe"
        android:layout_width="match_parent"
        android:layout_height="93px"
        android:background="@drawable/icon_bottom_tabhost_def"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:splitMotionEvents="false" >

        <!-- 主页 -->

        <LinearLayout
            android:id="@+id/ll_yaohe_bottom_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:paddingBottom="4px"
            android:paddingTop="3px"
            android:splitMotionEvents="false" >

            <ImageView
                android:id="@+id/iv_yaohe_bottom_home"
                android:layout_width="48px"
                android:layout_height="47px"
                android:adjustViewBounds="true"
                android:background="@null"
                android:maxHeight="49px"
                android:maxWidth="51px"
                android:scaleType="fitCenter"
                android:src="@drawable/yaohe_footer_home_off" />

            <TextView
                android:id="@+id/tv_yaohe_bottom_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="主页"
                android:textColor="@color/common_home_text_color_title"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 附近 -->

        <LinearLayout
            android:id="@+id/ll_yaohe_bottom_fujin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:paddingBottom="4px"
            android:paddingTop="3px"
            android:splitMotionEvents="false" >

            <ImageView
                android:id="@+id/iv_yaohe_bottom_fujin"
                android:layout_width="48px"
                android:layout_height="47px"
                android:adjustViewBounds="true"
                android:background="@null"
                android:maxHeight="49px"
                android:maxWidth="51px"
                android:scaleType="fitCenter"
                android:src="@drawable/yaohe_footer_fujin_off" />

            <TextView
                android:id="@+id/tv_yaohe_bottom_fujin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="附近"
                android:textColor="@color/common_home_text_color_title"
                android:textSize="13sp" />
        </LinearLayout>
        <!-- 好玩 -->

        <LinearLayout
            android:id="@+id/ll_yaohe_bottom_haowan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:paddingTop="3px"
            android:paddingBottom="4px"
            android:splitMotionEvents="false" >

            <ImageView
                android:id="@+id/iv_yaohe_bottom_haowan"
                android:layout_width="48px"
                android:layout_height="47px"
                android:adjustViewBounds="true"
                android:background="@null"
                android:maxHeight="49px"
                android:maxWidth="51px"
                android:scaleType="fitCenter"
                android:src="@drawable/yaohe_footer_haowan_off" />

            <TextView
                android:id="@+id/tv_yaohe_bottom_haowan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="好玩"
                android:textColor="@color/common_home_text_color_title"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 我的 -->

        <RelativeLayout
            android:id="@+id/rl_yaohe_bottom_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:paddingBottom="4px"
            android:paddingTop="3px"
            android:splitMotionEvents="false" >

            <ImageView
                android:id="@+id/iv_yaohe_bottom_mine"
                android:layout_width="48px"
                android:layout_height="47px"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@null"
                android:maxHeight="49px"
                android:maxWidth="51px"
                android:scaleType="fitCenter"
                android:src="@drawable/yaohe_footer_mine_no_message_off" />

            <View
                android:id="@+id/iv_yaohe_bottom_mine_red_dot"
                android:layout_width="14px"
                android:layout_height="14px"
                android:layout_alignEnd="@+id/iv_yaohe_bottom_mine"
                android:layout_alignRight="@+id/iv_yaohe_bottom_mine"
                android:layout_alignTop="@+id/iv_yaohe_bottom_mine"
                android:layout_marginRight="-6px"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:maxHeight="16px"
                android:maxWidth="16px"
                android:padding="1dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_yaohe_bottom_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_yaohe_bottom_mine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="我的"
                android:textColor="@color/common_home_text_color_title"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 从这以下是有【吆喝】按钮的布局 -->

    <LinearLayout
        android:id="@+id/ll_yaohe_footer_has_yaohe"
        android:layout_width="match_parent"
        android:layout_height="132px"
        android:background="@drawable/common_bg_bottom_yaohe_tab"
        android:baselineAligned="false"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:paddingBottom="3px"
        android:paddingTop="2px"
        android:splitMotionEvents="false"
        android:visibility="gone" >

        <!-- 主页 -->

        <LinearLayout
            android:id="@+id/ll_yaohe_bottom_home_has_yaohe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:splitMotionEvents="false" >

            <ImageView
                android:id="@+id/iv_yaohe_bottom_home_has_yaohe"
                android:layout_width="48px"
                android:layout_height="47px"
                android:adjustViewBounds="true"
                android:background="@null"
                android:maxHeight="49px"
                android:maxWidth="51px"
                android:scaleType="fitCenter"
                android:src="@drawable/yaohe_footer_home_off" />

            <TextView
                android:id="@+id/tv_yaohe_bottom_home_has_yaohe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="主页"
                android:textColor="@color/common_home_text_color_title"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 附近 -->

        <LinearLayout
            android:id="@+id/ll_yaohe_bottom_fujin_has_yaohe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:splitMotionEvents="false" >

            <ImageView
                android:id="@+id/iv_yaohe_bottom_fujin_has_yaohe"
                android:layout_width="48px"
                android:layout_height="47px"
                android:adjustViewBounds="true"
                android:background="@null"
                android:maxHeight="49px"
                android:maxWidth="51px"
                android:scaleType="fitCenter"
                android:src="@drawable/yaohe_footer_fujin_off" />

            <TextView
                android:id="@+id/tv_yaohe_bottom_fujin_has_yaohe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="附近"
                android:textColor="@color/common_home_text_color_title"
                android:textSize="13sp" />
        </LinearLayout>
        <!-- 商家身份以后出现的发吆喝小喇叭按钮 -->

        <RelativeLayout
            android:id="@+id/rl_tab_bottom_yaohe_viewgroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="3px" >

            <Button
                android:id="@+id/btn_footer_bottom_yaohe"
                android:layout_width="103px"
                android:layout_height="103px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/laba"
                android:duplicateParentState="true" />
        </RelativeLayout>
        <!-- 好玩 -->

        <LinearLayout
            android:id="@+id/ll_yaohe_bottom_haowan_has_yaohe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:splitMotionEvents="false" >

            <ImageView
                android:id="@+id/iv_yaohe_bottom_haowan_has_yaohe"
                android:layout_width="48px"
                android:layout_height="47px"
                android:adjustViewBounds="true"
                android:background="@null"
                android:maxHeight="49px"
                android:maxWidth="51px"
                android:scaleType="fitCenter"
                android:src="@drawable/yaohe_footer_haowan_off" />

            <TextView
                android:id="@+id/tv_yaohe_bottom_haowan_has_yaohe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="好玩"
                android:textColor="@color/common_home_text_color_title"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 我的 -->

        <RelativeLayout
            android:id="@+id/rl_yaohe_bottom_mine_has_yaohe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:splitMotionEvents="false" >

            <ImageView
                android:id="@+id/iv_yaohe_bottom_mine_has_yaohe"
                android:layout_width="48px"
                android:layout_height="47px"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@null"
                android:maxHeight="49px"
                android:maxWidth="51px"
                android:scaleType="fitCenter"
                android:src="@drawable/yaohe_footer_mine_no_message_off" />

            <View
                android:id="@+id/iv_yaohe_bottom_mine_red_dot_has_yaohe"
                android:layout_width="14px"
                android:layout_height="14px"
                android:layout_alignEnd="@+id/iv_yaohe_bottom_mine_has_yaohe"
                android:layout_alignRight="@+id/iv_yaohe_bottom_mine_has_yaohe"
                android:layout_alignTop="@+id/iv_yaohe_bottom_mine_has_yaohe"
                android:layout_marginRight="-6px"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:maxHeight="16px"
                android:maxWidth="16px"
                android:padding="1dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_yaohe_bottom_mine_has_yaohe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_yaohe_bottom_mine_has_yaohe"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="我的"
                android:textColor="@color/common_home_text_color_title"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
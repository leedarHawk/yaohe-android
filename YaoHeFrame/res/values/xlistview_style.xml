<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="commonProgressbarStyleBig">
        <item name="android:minHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:layout_width">34dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:indeterminateDrawable">@drawable/image_progress</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="commonProgressbarStyleSmall">
        <item name="android:minHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:layout_width">26dip</item>
        <item name="android:layout_height">26dip</item>
        <item name="android:indeterminateDrawable">@drawable/image_progress</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminate">true</item>
    </style>

